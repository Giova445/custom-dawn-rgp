{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<section class="banner-container {{ section.settings.content_position_mobile }}">
  {% if section.settings.hero_image %}
    {{ section.settings.hero_image | image_url: width: 1080 | image_tag: class: 'banner__media' }}
  {% endif %}
  <div class="banner__content {{ section.settings.content_position }} {{ section.settings.content_position_mobile }}">
    <div class="banner__box--in {{ section.settings.desktop_content_alignment }} {{ section.settings.mobile_content_alignment }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2
              class="banner__heading"
            >
              {{ block.settings.heading }}
            </h2>
          {%- when 'text' -%}
            <div class="banner__text rte ">
              <p>{{ block.settings.text }}</p>
            </div>
          
          {%- when 'button' -%}
            <a href="{{ block.settings.button_link }}" class="banner__button {{ block.settings.button_state }}">
              {{ block.settings.button_text }}
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "content_position",
      "options": [
        {
          "value": "middle-left",
          "label": "Middle Left"
        },
        {
          "value": "middle-center",
          "label": "Middle Center"
        },
        {
          "value": "middle-right",
          "label": "Middle Right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom-center",
          "label": "Bottom Center"
        },
        {
          "value": "bottom-right",
          "label": "Bottom Right"
        }
      ],
      "default": "middle-center",
      "label": "Desktop Content Position"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content Alignment"
    },
    {
      "type": "select",
      "id": "content_position_mobile",
      "options": [
        {
          "value": "middle-mobile",
          "label": "Middle text on image Left"
        },
        {
          "value": "middle-bottom-mobile",
          "label": "Middle text on image Bottom"
        },
        {
          "value": "bottom-mobile",
          "label": "Content below image"
        }
      ],
      "default": "middle-mobile",
      "label": "Mobile Content Position"
    },
    {
      "type": "select",
      "id": "mobile_content_alignment",
      "options": [
        {
          "value": "left-mobile",
          "label": "Left"
        },
        {
          "value": "center-mobile",
          "label": "Center"
        }
      ],
      "default": "center-mobile",
      "label": "Mobile Content Alignment"
    }
  ],
  "blocks": [
    {
      "name": "heading",
      "type": "heading",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Hero Title",
          "default": "Made in Nashville"
        }
      ]
    },
    {
      "type": "text",
      "name": "text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Hero Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        }
      ]
    },
    {
        "type": "button",
        "name": "button",
        "settings": [
            {
                "type": "url",
                "id": "button_link",
                "label": "button URL",
                "info": "add URL"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button text",
                "default": "Shop All Kennels"
            },
            {
                "type": "select",
                "id": "button_state",
                "options": [
                    {
                    "value": "primary",
                    "label": "primary"
                    },
                    {
                    "value": "secondary",
                    "label": "secondary"
                    }
                ],
                "default": "primary",
                "label": "Button state"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Image"
    }
  ]
}
{% endschema %}
